@{
    ViewBag.Title = "Книжний магазин";
}

<div>
    <h3>Книжковий розпродаш</h3>
    <tr>
        <td><p>Назва книги</p></td>
        <td><p>Автор</p></td>
        <td><p>Ціна</p></td>
    </tr>
    @foreach (var b in ViewBag.Books)
    {
    <tr>
        <td><p>@b.Name</p></td>
        <td><p>@b.Author</p></td>
        <td><p>@b.Price</p></td>
    </tr>
    }
</div>